<Window
    x:Class="BrilhoFlyout.BrilhoFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="320" Height="90"
    WindowStyle="None"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}"
    CornerRadius="12">

    <Grid Padding="16">
        <StackPanel>
            <TextBlock Text="Brilho" FontSize="14" Margin="0,0,0,8"/>
            <Slider x:Name="SliderBrilho" Minimum="0" Maximum="100"/>
        </StackPanel>
    </Grid>
</Window>